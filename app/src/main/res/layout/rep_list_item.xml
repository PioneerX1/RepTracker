<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/repNameTextView"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Rep's Name"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/repTitleTextView"
        android:layout_below="@+id/repNameTextView"
        android:text="Rep's Title"
        android:textStyle="italic"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/repStateTextView"
        android:layout_below="@+id/repTitleTextView"
        android:text="Rep's State"
        android:textStyle="italic"
        />

</LinearLayout>