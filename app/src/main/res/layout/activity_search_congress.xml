<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pioneerx1.reptracker.ui.SearchCongressActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/congressImage"
        android:src="@drawable/congresspic"
        android:scaleType="center"
        />


    <fragment
        android:id="@+id/fragmentRepList"
        android:name="com.pioneerx1.reptracker.ui.RepListFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        tools:layout="@layout/fragment_rep_list"
        />

</RelativeLayout>
